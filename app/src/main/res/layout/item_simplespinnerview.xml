<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/linearlayout_customspinner_list"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
                android:id="@+id/textview_customspinner_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="45dp"
                android:textSize="@dimen/ssv_default_text_size"
                android:layout_marginStart="@dimen/ssv_default_margin"
                android:layout_marginEnd="15dp"
                android:gravity="center_vertical"
                android:textColor="@color/ssvDefaultTextColor"/>
    </LinearLayout>
</layout>